CREATE SEQUENCE martian_id
MINVALUE 1
START WITH 1
INCREMENT BY 1
CACHE 10;

CREATE SEQUENCE base_id
MINVALUE 1
START WITH 1
INCREMENT BY 1
CACHE 10;

CREATE TABLE martian(
    martian_id number(10) not null,
    first_name VARCHAR2(50) NOT NULL,
    last_name VARCHAR2(50) NOT NULL,
    base_id number(10) ,
    super_id number(10),
    PRIMARY KEY(martian_id)
);
